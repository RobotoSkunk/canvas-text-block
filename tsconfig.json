{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["__tests__"]
}
